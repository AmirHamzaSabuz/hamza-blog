<h3>Comments</h3>

<% @article.comments.each do |comment| %>
    <div class="well">
    <b><%= link_to comment.user.username, user_path(comment.user) %></b>
    <p>
        <small>
        (<%= time_ago_in_words(comment.created_at) %> ago)
        </small>
    </p>
    <p>
        <%= comment.body %>
        <% if (logged_in? && current_user == comment.article.user) ||(logged_in? && current_user == comment.user) %>
            <%= link_to 'Delete', [comment.article, comment], method: :delete, class: "btn-danger", data: { confirm: 'Are you sure?' } %>
        <%end%>
    </p>
    </div>
<% end %>
